<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/background_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">


            <TextView
                android:id="@+id/venue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:focusable="true"
                android:text="Lonavala"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/venue_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue_name"
                android:text="17/08/2015" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/venue_name"
                android:layout_toRightOf="@id/venue_date"
                android:paddingLeft="5sp"
                android:text="(" />

            <TextView
                android:id="@+id/days_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/venue_name"
                android:layout_toRightOf="@id/venue_date"
                android:paddingLeft="10sp"
                android:text="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/venue_name"
                android:layout_toRightOf="@id/days_ago"
                android:paddingLeft="2sp"
                android:text="days ago )" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
